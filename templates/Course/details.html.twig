{% trans_default_domain 'Course' %}

{% include 'Default/panelStart.html.twig' with {header: 'Course Details: %name%', name: manager.entity.name, transDomain: 'Course', panelParagraph: '', panelStyle: 'primary'} %}
<div class="row">
    <div class="col-8 card">
        <div class="row">
            <div class="col-7 card">
                {{ form_row(form.name) }}
            </div>
            <div class="col-5 card">
                {{ form_row(form.nameShort) }}
            </div>
        </div>
        <div class="row">
            <div class="col-4 card">
                {{ form_row(form.sequence) }}
            </div>
            <div class="col-4 card">
                {{ form_row(form.map) }}
            </div>
            <div class="col-4 card">
                {{ form_row(form.department, {value: transformData(form.department)}) }}
            </div>
        </div>
    </div>
    <div class="col-4 card">
        <div class="row">
            <div class="col-12 card">
                {{ form_row(form.yearGroups) }}
            </div>
        </div>
    </div>
</div>
{% include 'Default/panelEnd.html.twig' %}